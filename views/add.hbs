<h1>Add course</h1>

{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" placeholder="New course name" value={{data.title}} required >
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Wrong price"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" placeholder="10000" vmin="1000" value={{data.price}} required >
    <label for="price">Price</label>
    <span class="helper-text" data-error="Wrong price"></span>

  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" value={{data.img}} required>
    <label for="img">URL image</label>
    <span class="helper-text" data-error="Wrong url"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary">Add course</button>
</form>
