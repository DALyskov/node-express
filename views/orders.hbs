<h1>My orders</h1>
{{#if orders.length}}
{{#each orders}}
    <div class="row">
    <div class="col s6">
      <div class="card">
        <div class="card-content">
          <span class="card-title">
            Order <small>{{_id}}</small>
          </span>
          <p class="date">{{date}}</p>
          <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>
        </div>
        <ol>
          {{#each courses}}
          <li>
            {{course.title}} (x<strong>{{count}}</strong>)
          </li>
          {{/each}}
        </ol>

        <hr>
         <p>Total: <span class="price">{{price}}</span></p>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>There are no orders yet</p>
{{/if}}
